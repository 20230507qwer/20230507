#include<iostream>
#include<algorithm>
#include<cstring>
#include<vector>
#include<cmath>
using namespace std;
int dp[1500][1500] = { {0} };

void LCS(string &a, string &b)
{
	for (int i = 1; i <= a.length(); i++) {
		for (int j = 1; j <= b.length(); j++) {
			if (a[i] == b[j])
				dp[i][j] = dp[i - 1][j - 1] + 1;
			else
				dp[i][j] = max(dp[i][j - 1], dp[i - 1][j]);//如果a[i]!=b[j] 那么抛弃a[i]或者b[j],取两者较大值
		}
	}
	cout << dp[a.length()][b.length()] << endl;
}

int main()
{
	string a, b;
	cin >> a >> b;
	LCS(a,b);
	return 0;
}
